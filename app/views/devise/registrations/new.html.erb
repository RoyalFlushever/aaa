<div class="authform">
  
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password Confirmation', class: 'form-control' %>
  </div>

  <div class="row flex_div">
    <div class="checkbox col text-left">
      <label>
        <%= f.check_box :remember_me %> I agree terms and services
      </label>
    </div>
  </div>

  <div class="form-group flex_div text-center action">
    <%= f.submit 'Sign Up', :class => 'btn btn-primary form-control col' %>
    <%= link_to 'Cancel', new_session_path(resource_name), class: 'btn btn-primary form-control col' %>
  </div>


<% end %>
  <%- if devise_mapping.omniauthable? %>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
  <% end -%>

</div>
