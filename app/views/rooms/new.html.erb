<%# rooms#new %>
<div class="container">
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Create a new Room</h3>
  </div>
  <div class="panel-body">
    <%= form_for(@room) do |f| %>
      <div class="select-container">
        <div class="form-group">
          <%= f.label :home_type %>
          <%= f.select :home_type, Room::HOME_TYPES, :include_blank => "Select...", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :room_type %>
          <%= f.select :room_type, Room::ROOM_TYPES, :include_blank => "Select...", class: 'form-control' %>
          <%# select_tag(:room_type, 
                        options_for_select(Room::ROOM_TYPES),
                        :include_blank => "Select...", 
                        class: 'form-control'
                      )%>
        </div>
        <div class="form-group">
          <%= f.label :accommodate %>
          <%= f.select :accommodate, (1..6), :include_blank => "Select...", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :bedroom %>
          <%= f.select :bedroom, (1..4), :include_blank => "Select...", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :bathroom %>
          <%= f.select :bathroom, (1..4), :include_blank => "Select...", class: 'form-control' %>
        </div>
      </div>
      <%= f.submit 'Create', class: 'btn btn-info' %>
    <% end %>
  </div>
</div>
</div>